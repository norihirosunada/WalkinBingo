<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/ic_inner_circle"
                android:gravity="center" />
            <item android:drawable="@drawable/ic_outer_circle"
                android:gravity="center"/>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/ic_inner_circle"
                android:gravity="center"
                android:width="36dp"
                android:height="36dp"/>
            <item android:drawable="@drawable/ic_outer_circle"
                android:gravity="center"/>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:drawable="@drawable/ic_inner_circle"
                android:gravity="center"
                android:width="36dp"
                android:height="36dp"/>
            <item android:drawable="@drawable/ic_outer_circle"
                android:gravity="center"/>
        </layer-list>
    </item>
</selector>